{
  "name": "porteiroapp-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "PorteiroApp - Multi-tenant condominium management system",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22.18.0",
    "pnpm": ">=9.15.0"
  },
  "scripts": {
    "dev": "pnpm build:common && pnpm --parallel --filter \"./apps/**\" dev",
    "dev:mobile": "pnpm build:common && pnpm --filter @porteiroapp/porteiro-mobile start",
    "dev:web": "pnpm build:common && pnpm --filter @porteiroapp/porteiro-site dev",
    "dev:api": "pnpm build:common && pnpm --filter @porteiroapp/interfone-api dev",
    "build": "pnpm --recursive --filter \"./apps/**\" --filter \"./packages/**\" build",
    "build:mobile": "pnpm --filter @porteiroapp/porteiro-mobile build",
    "build:web": "pnpm --filter @porteiroapp/porteiro-site build",
    "build:api": "pnpm --filter @porteiroapp/interfone-api build",
    "build:common": "pnpm --filter @porteiroapp/common build",
    "start:web": "pnpm build:common && pnpm --filter @porteiroapp/porteiro-site start",
    "start:api": "pnpm build:common && pnpm --filter @porteiroapp/interfone-api start",
    "start:android": "pnpm build:common && pnpm --filter @porteiroapp/porteiro-mobile android",
    "start:ios": "pnpm build:common && pnpm --filter @porteiroapp/porteiro-mobile ios",
    "test": "pnpm --filter @porteiroapp/tests test:all",
    "test:unit": "pnpm --filter @porteiroapp/tests test",
    "test:advanced": "pnpm --filter @porteiroapp/tests test:advanced",
    "test:persistence": "pnpm --filter @porteiroapp/tests test:persistence",
    "lint": "pnpm --recursive lint",
    "lint:mobile": "pnpm --filter @porteiroapp/porteiro-mobile lint",
    "lint:web": "pnpm --filter @porteiroapp/porteiro-site lint",
    "format": "pnpm --filter @porteiroapp/porteiro-mobile format",
    "typecheck": "pnpm --recursive --filter \"./apps/**\" --filter \"./packages/**\" typecheck",
    "supabase": "supabase",
    "db:link": "supabase link --project-ref $SUPABASE_PROJECT_REF",
    "db:push": "supabase db push --db-url $DATABASE_URL",
    "db:migrate": "supabase db push --db-url $DATABASE_URL",
    "clean": "pnpm --recursive exec -- pnpm dlx rimraf node_modules dist .next .expo && pnpm dlx rimraf node_modules",
    "clean:install": "pnpm clean && pnpm install"
  },
  "pnpm": {
    "patchedDependencies": {
      "react-native@0.81.5": "patches/react-native@0.81.5.patch",
      "agora-react-native-rtm@1.5.1": "patches/agora-react-native-rtm@1.5.1.patch",
      "react-native-callkeep@4.3.16": "patches/react-native-callkeep@4.3.16.patch"
    }
  },
  "devDependencies": {
    "supabase": "^2.53.6",
    "typescript": "^5.9.2"
  }
}
