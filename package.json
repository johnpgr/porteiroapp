{
  "name": "porteiroapp-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "PorteiroApp - Multi-tenant condominium management system",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.15.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/**\" dev",
    "dev:mobile": "pnpm --filter @porteiroapp/porteiro-mobile start",
    "dev:web": "pnpm --filter @porteiroapp/porteiro-site dev",
    "dev:api": "pnpm --filter @porteiroapp/notification-api dev",
    "build": "pnpm --recursive --filter \"./apps/**\" build",
    "build:mobile": "pnpm --filter @porteiroapp/porteiro-mobile build",
    "build:web": "pnpm --filter @porteiroapp/porteiro-site build",
    "build:api": "pnpm --filter @porteiroapp/notification-api build",
    "start:web": "pnpm --filter @porteiroapp/porteiro-site start",
    "start:api": "pnpm --filter @porteiroapp/notification-api start",
    "test": "pnpm --filter @porteiroapp/tests test:all",
    "test:unit": "pnpm --filter @porteiroapp/tests test",
    "test:advanced": "pnpm --filter @porteiroapp/tests test:advanced",
    "test:persistence": "pnpm --filter @porteiroapp/tests test:persistence",
    "lint": "pnpm --recursive lint",
    "lint:mobile": "pnpm --filter @porteiroapp/porteiro-mobile lint",
    "lint:web": "pnpm --filter @porteiroapp/porteiro-site lint",
    "format": "pnpm --filter @porteiroapp/porteiro-mobile format",
    "type-check": "pnpm --recursive --filter \"./packages/**\" type-check",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .next .expo",
    "clean:install": "pnpm clean && pnpm install"
  }
}
